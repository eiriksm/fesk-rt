{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "public/build",
    "rootDir": "src"
  },
  "include": ["src"]
}
